#! /bin/sh

source $(dirname $0)/config

while read -r line ; do
    case $line in
        S*)
            sys_infos="%{r}${line#?}"
            ;;
        T*)
            title=" %{F$COLOR_ICON}  %{F-} bspwm"
            ;;
        W*)
            wm_infos="%{c}"
            IFS=':'
            set -- ${line#?}
            while [ $# -gt 0 ] ; do
                item=$1
                name=${item#?}
                case $item in
                    [OFU]*)
                        # active desktop
                        wm_infos="$wm_infos %{U$COLOR_ACTIVE}%{+u} ${name} %{-u}"
                        ;;
                    o*)
                        # inactive but occupied desktop
                        wm_infos="$wm_infos %{U$COLOR_OCCUPIED}%{+u}   %{-u}"
                        ;;
                    f*)
                        # inactive desktop
                        wm_infos="$wm_infos    "
                        ;;
                    u*)
                        # urgent desktop
                        wm_infos="$wm_infos %{U$COLOR_URGENT}%{+u}   %{-u}"
                        ;;
                    L*)
                        # layout
                        #layout=$(printf "%s" "${name}" | sed 's/\(.\).*/\U\1/')
                        wm_infos="$wm_infos $layout"
                        ;;
                esac
                shift
            done
            ;;
    esac
    printf "%s\n" "$title$wm_infos$sys_infos"
done
