# Add the following to your .zshrc to tab-complete ninja targets
#   . path/to/ninja/misc/zsh-completion

_ninja() {
  reply=(`(ninja -t targets all 2&>/dev/null) | awk -F: '{print $1}'`)
}
compctl -K _ninja ninja
