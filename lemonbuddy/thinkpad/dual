animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate_ms = 750

[module/memory]
type = internal/memory
format = <label> 
label = RAM %percentage_used%
format-label-foreground = #fac863
format-padding = 2

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next>  <icon-repeat> <icon-random> <label-time>  <label-song>

[module/volume]
type = internal/volume
format-volume =<ramp-volume><label-volume>
format-muted-padding = 2
label-volume = %percentage%
label-muted =  muted
label-muted-foreground = #f70808
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground=#698edd

[module/cpu]
type = internal/cpu
label =  %percentage%
format = <label>
interval = 1

[module/bspwm]
