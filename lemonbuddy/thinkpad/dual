[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/work_vga1]
monitor = DP2-2
bottom = false
dock = false

width = 100%
height = 20

background = #c0272822
foreground = #c0f1ebeb

spacing = 1
lineheight = 1

;separator = |

;locale = en_US.UTF-8

padding_left = 1
padding_right = 1
module_margin_left = 0
module_margin_right = 0

;font-0 = Hack:size=8;0
font-0 = tamzen:size=9;1
font-1 = FontAwesome:size=8;0
font-2 = unifont:size=6;-1

modules-left = linux
modules-center = bspwm
modules-right = mpd cpu memory volume battery clock
wm-restack = bspwm
tray-position = left

[bar/work_hdmi1]
monitor = DP2-1
bottom = false
dock = false

width = 100%
height = 20

;offset_x = 0
;offset_y = 0

background = #c0272822
foreground = #c0f1ebeb

spacing = 1
lineheight = 1

padding_left = 1
padding_right = 1
module_margin_left = 0
module_margin_right = 0

font-0 = tamzen:size=9;1
font-1 = FontAwesome:size=8;0
font-2 = unifont:size=6;-1

modules-left = linux wireless
modules-center = bspwm
wm-restack = bspwm

[bar/work_edp1]
;monitor = eDP1
bottom = false
dock = false

width = 100%
height = 20

background = #c0272822
foreground = #c0f1ebeb

spacing = 1
lineheight = 1

padding_left = 1
padding_right = 1
module_margin_left = 0
module_margin_right = 0

font-0 = sans:size=8;0
font-1 = FontAwesome:size=10:weight=heavy;0

modules-left = linux mpd wireless
modules-center = bspwm
modules-right =  xbacklight pacman volume battery battrem clock
tray-position = left
wm-restack = bspwm

[module/clock]
type = internal/date
date = %Y-%m-%d %H:%M
format-padding = 2

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
format-discharging = <ramp-capacity> <label-discharging>
format-charging = <animation-charging> <label-charging>
label-discharging-foreground=#fba922
label-full = 

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate_ms = 750

[module/memory]
type = internal/memory
format = <label> 
label = RAM %percentage_used%
format-label-foreground = #fac863
format-padding = 2

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next>  <icon-repeat> <icon-random> <label-time>  <label-song>

icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
icon-random = 
icon-repeat = 

toggle_on-foreground =
toggle_off-foreground = #55

bar-progress-width = 20
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-volume-padding = 2
format-muted-padding = 2
label-volume = %percentage%
label-muted =  muted
label-muted-foreground = #66
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
label-volume-foreground=#a7db8d
ramp-volume-foreground=#a7db8d

[module/cpu]
type = internal/cpu
label =  %percentage%
interval = 0.5

[module/bspwm]
workspace_icon-[0-9]+ = label; icon

type = internal/bspwm
label-active = %icon%
label-active-foreground = #ffffff
label-active-underline = #fba922
label-active-padding = 1
label-occupied =  %icon%
label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-underline = #9b0a20
label-occupied-padding = 1
label-empty =  %icon%
label-empty-padding = 1
label-dimmed-foreground = #555
label-dimmed-underline = ${BAR.background}

ws-icon-0 = dev;
ws-icon-1 = im;
ws-icon-2 = mail;
ws-icon-3 = web;
ws-icon-4 = system;
ws-icon-5 = git;
ws-icon-6 = priv;
ws-icon-7 = code;
ws-icon-8 = docs;
ws-icon-default = ♟

[module/linux]
type = custom/text
content = 
click-left = "termite"

[module/xbacklight]
type = custom/script
exec = b=$(xbacklight) && c=${b/.*}  && echo " $c"
interval=1
format-padding = 1


[module/pacman]
type = custom/script
exec = count=$(pacman -Qu | wc -l); [ $count -gt 0 ] && echo "Updates available: $count"
interval=1
format-padding = 1

[module/battrem]
type = custom/script
exec = acpi -b | grep Discharging | awk '{print $5}'
interval=1
format-padding = 1

[module/wireless]
type = internal/network
interface = wlp2s0

