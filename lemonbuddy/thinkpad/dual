[settings]
font0 = tamzen:size=11;1
font1 = FontAwesome:size=8;0
font2 = unifont:size=6;-1

[bar/main]
monitor = ${env:BAR_MONITOR}
bottom = false
width = 100%
height = 20
foreground = #c0f1ebeb
spacing = 1
module-margin-left = 1
module-margin-right = 0
;separator= "|"

font-0 = ${settings.font0}
font-1 = ${settings.font1}
font-2 = ${settings.font2}

modules-left = linux
modules-center = bspwm
modules-right =  vpn pkg volume battery clock keyboard
wm-restack = bspwm
tray-position = right

[bar/work_hdmi1]
monitor = ${env:BAR_MONITOR}
