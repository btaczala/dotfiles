[module/linux]
type = custom/text
content = 
click-left = "termite"

[module/wireless]
type = internal/network
interface = wlp2s0

[module/mail-counter]
type=custom/script
exec=notmuch count --output=threads tag:unread and tag:new
format= <label>
click-right=notmuch tag -unread tag:inbox

[module/vpn]
type = custom/script
exec = echo ' vpn'
exec-if = pgrep -x openconnect
;exec-if = true
interval = 1
format-prefix = ""
format-prefix-foreground = #f75e5e
format-background=#272827

[module/pkg]
type = custom/script
interval = 1200
format = <label>
format-underline = #dc322f
label = %output:0:30%
exec = ~/dotfiles/scripts/pacman_packages.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

