IMAPAccount bartek.taczala
# Address to connect to
Host imap.gmail.com
User bartek.taczala@gmail.com
PassCmd "sh ~/dotfiles/mutt/pass.sh"
#
# Use SSL
UseIMAPS yes
RequireSSL yes
# The following line should work. If get certificate errors, uncomment the two following lines and read the "Troubleshooting" section.
#CertificateFile /etc/ssl/certs/ca-certificates.crt

IMAPStore bartek.taczala-remote
Account bartek.taczala

MaildirStore bartek.taczala-local
# The trailing "/" is important
Path ~/.mutt/mail/bartek.taczala/
Inbox ~/.mutt/mail/bartek.taczala/Inbox

Channel bartek.taczala-default
Master :bartek.taczala-remote:
Slave :bartek.taczala-local:
Patterns "INBOX" "alberto" 
# Automatically create missing mailboxes, both locally and on the server
Create Both
# Save the synchronization state files in the relevant directory
SyncState *

Channel bartek.taczala-drafts
Master ":bartek.taczala-remote:[Gmail]/Drafts"
Slave ":bartek.taczala-local:drafts"
Create Both
SyncState *

Channel bartek.taczala-sent
Master ":bartek.taczala-remote:[Gmail]/Sent Mail"
Slave ":bartek.taczala-local:sent"
Create Both
SyncState *

Channel bartek.taczala-mailinglist-boost
Master ":bartek.taczala-remote:mailing lists/boost"
Slave ":bartek.taczala-local:mailing.lists.boost"
Create Both
SyncState *

Channel bartek.taczala-mailinglist-isocpp
Master ":bartek.taczala-remote:mailing lists/isocpp"
Slave ":bartek.taczala-local:mailing.lists.isocpp"
Create Both
SyncState *

Channel bartek.taczala-mailinglist-sailfish
Master ":bartek.taczala-remote:mailing lists/sailfish"
Slave ":bartek.taczala-local:mailing.lists.sailfish"
Create Both
SyncState *

Channel bartek.taczala-mailinglist-wayland
Master ":bartek.taczala-remote:mailing lists/wayland"
Slave ":bartek.taczala-local:mailing.lists.wayland"
Create Both
SyncState *

Channel bartek.taczala-mailinglist-qtcreator
Master ":bartek.taczala-remote:mailing lists/qtcreator"
Slave ":bartek.taczala-local:mailing.lists.qtcreator"
Create Both
SyncState *

Channel bartek.taczala-archive
Master ":bartek.taczala-remote:[Gmail]/All Mail"
Slave ":bartek.taczala-local:archive"
Create Both
SyncState *



