#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

"ponymix decrease 5 ; volnoti-show `ponymix get-volume`"
 XF86AudioLowerVolume

"ponymix increase 5 ; volnoti-show `ponymix get-volume`"
 XF86AudioRaiseVolume

"xbacklight -5% ; volnoti-show -s /usr/share/pixmaps/volnoti/display-brightness-symbolic.svg `xbacklight`"
 Mod2 + XF86MonBrightnessDown  

"xbacklight +5% ; volnoti-show -s /usr/share/pixmaps/volnoti/display-brightness-symbolic.svg `xbacklight`"
 Mod2 + XF86MonBrightnessUp  

"~/dotfiles/dmenu/xrmenu.sh"
 Mod2 + XF86Display

"playerctl play-pause"
 XF86AudioPlay

"playerctl next"
 XF86AudioNext

"playerctl prev"
 XF86AudioPrev

"ponymix toggle"
 Mod2 + XF86AudioMute

"kbdlight down"
 XF86KbdBrightnessDown

"kbdlight up"
 XF86KbdBrightnessUp


