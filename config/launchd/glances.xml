<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN"
   "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.bartek.glances</string>

    <key>ProgramArguments</key>
    <array>
      <string>/opt/homebrew/bin/glances</string>
      <string>-w</string>
      <string>--bind</string>
      <string>0.0.0.0</string>
      <string>--port</string>
      <string>61208</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/bartek/Library/Logs/glances.out.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/bartek/Library/Logs/glances.err.log</string>
  </dict>
</plist>
