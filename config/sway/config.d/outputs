set $bg1 ~/dotfiles/walls/orion.png
output * bg $bg1 fill

output DP-4 pos 0 0
output DP-5 pos 1920 0

smart_gaps on
gaps inner 14

#
# Screen locking
#

set $swaylock_command ~/dotfiles/cool_lock_sway.sh

bindsym $mod+$alt+l exec $swaylock_command

exec swayidle -w \
    timeout 300 "$swaylock_command" \
    resume 'swaymsg "output * dpms on"' \
before-sleep "$swaylock_command"

set $laptop eDP-1
bindswitch lid:on output $laptop disable
bindswitch lid:off output $laptop enable
