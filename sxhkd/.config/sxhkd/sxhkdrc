#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + q
	bspc node -c

super + {t,s,f,p}
    bspc node -t {tiled,floating,fullscreen,pseudo_tiled}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

super + g
	bspc node -s biggest

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

super + bracket{left,right}
	bspc desktop -f {prev,next}

# presel
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# cancel presel
super + ctrl + space
    bspc node -p cancel

super + alt + {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

super + alt + shift + {Left, Down, Up, Right}
	bspc node {@east -r -10,@north +10,@south -r -10,@west -r +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

super + u
    bspc desktop -f next.urgent; bspc window -f next.urgent

super + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))
#
# wm independent hotkeys
#

super + Return
    termite

super + space
    rofi -show run -fake-transparency

super + w
    rofi -show window

super + r
    rofi -show drun -fake-transparency

super + e
    ~/dotfiles/rofi/custom_rofi.sh

super + l
    $HOME/dotfiles/cool_lock.sh

super + c
    clipmenu 

super + comma
    python ~/dotfiles/bspwm/change_workspace.py

super + x
    python $HOME/dotfiles/bspwm/change_workspace.py

super + m
    sh $HOME/dotfiles/monitors/change.sh

super + v
    python ~/external/projects/pidgin-dmenu/pidgin.py

super + a
    sh $HOME/dotfiles/bspwm/toggle_panel.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + Prior
    ponymix decrease 5

super + Next
    ponymix increase 5

XF86AudioLowerVolume
    ponymix decrease 5

XF86AudioRaiseVolume
    ponymix increase 5

super + F5
    ponymix decrease 5

super + F6
    ponymix increase 5

XF86AudioPlay
    mpc toggle

XF86AudioMute
    ponymix toggle

XF86MonBrightnessDown
    xbacklight -5%

XF86MonBrightnessUp
    xbacklight +5%
