#!/bin/sh

w=$(bspc query -T -m focused | jq .rectangle.width)
h=$(bspc query -T -m focused | jq .rectangle.height)

wnew=$(echo "$w * 0.6" | bc -l)
hnew=$(echo "$h * 0.6" | bc -l)

wint=${wnew%.*}
hint=${hnew%.*}

res=$wint"x"$hint
echo $res
termite --title calendar_floating --hold --geometry $res -e /usr/bin/ncmpcpp
